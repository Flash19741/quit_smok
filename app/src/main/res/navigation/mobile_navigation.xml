<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_settings">

    <fragment
        android:id="@+id/navigation_timer"
        android:name="com.example.quit_smok.ui.timer.TimerFragment"
        android:label="@string/timer"
        tools:layout="@layout/fragment_timer" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.quit_smok.ui.settings.SettingsFragment"
        android:label="@string/settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/navigation_statistics"
        android:name="com.example.quit_smok.ui.statistics.StatisticsFragment"
        android:label="@string/statistics"
        tools:layout="@layout/fragment_statistics" />
</navigation>