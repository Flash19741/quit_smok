<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Текст для времени последнего перекура -->
    <TextView
        android:id="@+id/tv_last_smoke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Время последнего перекура: --"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Текст для времени следующего перекура -->
    <TextView
        android:id="@+id/tv_next_smoke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Время следующего перекура: --"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tv_last_smoke"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Существующий текст "Вы можете покурить через..." -->
    <TextView
        android:id="@+id/tv_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Вы можете покурить через..."
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tv_next_smoke"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Другие элементы UI, например, кнопка для записи перекура -->
    <Button
        android:id="@+id/btn_smoke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Записать перекур"
        app:layout_constraintTop_toBottomOf="@id/tv_timer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>